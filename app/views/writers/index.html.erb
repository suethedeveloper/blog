<div class="currentPage">
  <%= link_to "", writers_path, class: "glyphicon glyphicon-home" %>&nbsp; > &nbsp;Writers &nbsp;> Index
</div>
<br><br>
<table class="table table-hover">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Age</th>
    <th></th>
  </tr>
  <tbody>

    <% @writers.each do |writer| %>

    <tr>
      <td><strong><%= writer.first_name %></strong></td>
      <td><%= writer.last_name %></td>
      <td><%= writer.age %></td>
      <td><%= link_to "See more about #{writer.first_name} #{writer.last_name}", writer_path(writer) %></td>
    </tr>

    <% end %>

  </tbody>


    <% if @writers.length == 0 %>

    <tr>
      <td colspan="4" align="center">
        <br>
        <strong class="text-danger">There is no writer.</strong>
      </td>
    </tr>

  <% end %>



    <tr>
      <td colspan="4" align="right">
        <br>
        <%= link_to "Add new writer", new_writer_path, class: "btn btn-default"  %>
      
      </td>
    </tr>
</table>