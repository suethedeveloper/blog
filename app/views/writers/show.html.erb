<div class="currentPage">
  <%= link_to "", writers_path, class: "glyphicon glyphicon-home" %>&nbsp; > &nbsp;Writers &nbsp;> Show
</div>
<br><br>
<table class="table">
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Age</th>
    <th></th>
  </tr>
  <tbody>
    <tr>
      <td><strong><%= @writer.first_name %></strong></td>
      <td><%= @writer.last_name %></td>
      <td><%= @writer.age %></td>
      <td>
      <% if @writer.posts.length > 0 %>
        <%= link_to "See #{@writer.first_name} #{@writer.last_name}'s postings", writer_posts_path(@writer) %>
      <% else %>
        <%= link_to "Write a new post", new_writer_post_path(@writer) %>
      <% end %>
      </td>
    </tr>
    <tr>
      <td colspan="4"><%= link_to "EDIT #{@writer.first_name} #{@writer.last_name}", edit_writer_path(@writer) %>&nbsp;&nbsp; | &nbsp;&nbsp;<%= link_to "DELETE", writer_path(@writer) ,method: "DELETE", data: {confirm: "Are you sure to delete #{@writer.first_name} #{@writer.last_name}?"} %></td>
    </tr>
  </tbody>
</table>
